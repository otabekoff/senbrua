<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Gjs_Window" parent="AdwApplicationWindow">
    <property name="width_request">360</property>
    <property name="height_request">480</property>
    <property name="hexpand">True</property>
    <property name="vexpand">True</property>
    <property name="default_width">780</property>
    <property name="default_height">480</property>
    <property name="title" translatable="yes">Senbrua</property>
    <child>
      <object class="AdwToolbarView" id="toolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
          </object>
        </child>
        <child>
          <object class="AdwToastOverlay" id="toastOverlay">
            <property name="child">
              <object class="GtkBox" id="contentBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">0</property>
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <property name="margin_start">12</property>
                <property name="margin_end">12</property>
                <property name="margin_top">12</property>
                <property name="margin_bottom">12</property>
                <child>
                  <object class="GtkStack" id="mainStack">
                    <property name="hexpand">True</property>
                    <property name="vexpand">True</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">empty</property>
                        <property name="child">
                          <object class="AdwStatusPage" id="emptyPage">
                            <property name="title" translatable="yes">Add Recordings</property>
                            <property name="description" translatable="yes">Use the
                              &lt;b&gt;Record&lt;/b&gt; button to make sound recordings.</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">recordings</property>
                        <property name="child">
                          <object class="GtkScrolledWindow">
                            <property name="hexpand">True</property>
                            <property name="vexpand">True</property>
                            <property name="hscrollbar_policy">never</property>
                            <property name="child">
                              <object class="GtkViewport">
                                <property name="scroll_to_focus">True</property>
                                <property name="child">
                                  <object class="AdwClamp" id="column">
                                    <property name="maximum_size">650</property>
                                  </object>
                                </property>
                              </object>
                            </property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="sidebar">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <property name="width_request">260</property>
                    <property name="hexpand">False</property>
                    <property name="margin_start">12</property>
                    <property name="margin_end">12</property>
                    <property name="margin_top">0</property>
                    <property name="margin_bottom">0</property>
                    <style>
                      <class name="sidebar" />
                    </style>
                    <child>
                      <object class="GtkButton" id="recordButton">
                        <property name="receives_default">False</property>
                        <property name="action_name">recorder.start</property>
                        <child>
                          <object class="AdwButtonContent">
                            <property name="icon_name">media-record-symbolic</property>
                            <property name="label" translatable="yes">Record</property>
                          </object>
                        </child>
                        <style>
                          <class name="suggested-action" />
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator" />
                    </child>
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="vexpand">True</property>
                        <property name="hscrollbar_policy">never</property>
                        <property name="child">
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">16</property>
                            <!-- Theme Mode -->
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">6</property>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label" translatable="yes">Appearance</property>
                                    <property name="xalign">0</property>
                                    <style>
                                      <class name="heading" />
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">4</property>
                                    <child>
                                      <object class="GtkCheckButton" id="themeSystemRadio">
                                        <property name="label" translatable="yes">System</property>
                                        <property name="active">True</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkCheckButton" id="themeLightRadio">
                                        <property name="label" translatable="yes">Light</property>
                                        <property name="group">themeSystemRadio</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkCheckButton" id="themeDarkRadio">
                                        <property name="label" translatable="yes">Dark</property>
                                        <property name="group">themeSystemRadio</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Preferred Format -->
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">6</property>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label" translatable="yes">Preferred Format</property>
                                    <property name="xalign">0</property>
                                    <style>
                                      <class name="heading" />
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">4</property>
                                    <child>
                                      <object class="GtkCheckButton" id="formatVorbisRadio">
                                        <property name="label" translatable="yes">Vorbis</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkCheckButton" id="formatOpusRadio">
                                        <property name="label" translatable="yes">Opus</property>
                                        <property name="group">formatVorbisRadio</property>
                                        <property name="active">True</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkCheckButton" id="formatFlacRadio">
                                        <property name="label" translatable="yes">FLAC</property>
                                        <property name="group">formatVorbisRadio</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkCheckButton" id="formatMp3Radio">
                                        <property name="label" translatable="yes">MP3</property>
                                        <property name="group">formatVorbisRadio</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Audio Channel -->
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">6</property>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label" translatable="yes">Audio Channel</property>
                                    <property name="xalign">0</property>
                                    <style>
                                      <class name="heading" />
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">4</property>
                                    <child>
                                      <object class="GtkCheckButton" id="channelStereoRadio">
                                        <property name="label" translatable="yes">Stereo</property>
                                        <property name="active">True</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkCheckButton" id="channelMonoRadio">
                                        <property name="label" translatable="yes">Mono</property>
                                        <property name="group">channelStereoRadio</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Noise Reduction -->
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="hexpand">True</property>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label" translatable="yes">Noise Reduction</property>
                                    <property name="xalign">0</property>
                                    <property name="hexpand">True</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkSwitch" id="noiseSwitch">
                                    <property name="halign">end</property>
                                    <property name="valign">center</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator" />
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkButton" id="shortcutsButton">
                            <property name="label" translatable="yes">Keyboard Shortcuts</property>
                            <property name="action_name">win.show-help-overlay</property>
                            <style>
                              <class name="flat" />
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="aboutButton">
                            <property name="label" translatable="yes">About Senbrua</property>
                            <property name="action_name">app.about</property>
                            <style>
                              <class name="flat" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>