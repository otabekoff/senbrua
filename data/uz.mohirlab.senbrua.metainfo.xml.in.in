<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@app-id@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>Senbrua</name>
  <summary>Record sound via the microphone and play it back</summary>
  <description>
    <p>
      Senbrua is a modern remake of Vocalis - a simple and elegant sound recorder
      application for the GNOME desktop with advanced noise cancellation.
    </p>
    <p>Features:</p>
    <ul>
      <li>Record audio in multiple formats (Opus, Vorbis, FLAC, MP3)</li>
      <li>RNNoise-powered noise reduction</li>
      <li>Playback recordings with waveform visualization</li>
      <li>Theme mode switch (System, Light, Dark)</li>
      <li>Rename and export recordings</li>
      <li>Modern GNOME design with libadwaita</li>
    </ul>
  </description>
  <url type="homepage">https://github.com/otabekoff/senbrua</url>
  <url type="bugtracker">https://github.com/otabekoff/senbrua/issues</url>
  <developer id="uz.mohirlab">
